#include<stdio.h>
int main()
{
  int d1;
  int d2;
  int d3;
  int i;
  int a[5];
  scanf("%d%d%d", &d1, &d2, &d3);
  a[0] = 2 * (d1 + d2);
  a[1] = 2 * (d2 + d3);
  a[2] = ((3 * d2) + d1) + d3;
  a[3] = (d3 + d1) + d2;
  a[4] = 2 * (d1 + d3);
  a[5] = ((3 * d1) + d2) + d3;
  int min = a[0];
  for (i = 1; i < 5; i++)
  {
    if (a[i] < min)
      min = a[i];

  }

  printf("%d", min);
  return 0;
}

